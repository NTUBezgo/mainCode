<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_breakthrough"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/worksheet_background"
    tools:context="com.ezgo.index.WorkSheetFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="9"
        android:padding="45dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/circle_hyena"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:src="@drawable/sticker_hyena"
                android:padding="15dp"/>

            <ImageView
                android:id="@+id/circle_bear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:src="@drawable/sticker_bear"
                android:padding="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/circle_wolf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:src="@drawable/sticker_wolf"
                android:padding="15dp"/>

            <ImageView
                android:id="@+id/circle_head_prairiedog"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:src="@drawable/sticker_prairiedog"
                android:padding="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/circle_kookaburra"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:src="@drawable/sticker_kookaburra"
                android:padding="15dp"/>

            <ImageView
                android:id="@+id/circle_deer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:src="@drawable/sticker_deer"
                android:padding="15dp"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/startExchange"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_arstart"
        android:textSize="38dp"
        android:textColor="@color/whiteColor"
        android:layout_gravity="center_horizontal"
        android:text="@string/worksheet_btnStartExchange"
        android:visibility="gone"/>

</LinearLayout>
